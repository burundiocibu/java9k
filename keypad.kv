# 
# Local Variables:
# mode: python
# End:

<KeyPadScreen>:
    userInput: user_input
    feedback: feedback
    userPrompt: user_prompt

    BoxLayout:
        orientation: 'horizontal'
        BoxLayout:
            orientation: 'vertical'
            id: left_box
            Label:
                id: user_prompt
                font_size: '22sp'
                size_hint_y: 0.1
                markup: True
                text: "Please swipe badge or enter work\nphone extension for a cup:"
                halign: "center"
            Label:
                id: spacer1
                size_hint_y: 0.02  
            Label:
                canvas:
                    Color:
                        rgba: .6,.6,1,0.25
                    RoundedRectangle:
                        pos: self.pos
                        size: self.size
                id: user_input
                halign: "center"
                size_hint_y: 0.08
                size_hint_x: 0.45
                pos_hint: {'center_x':0.5}
                markup: True
                font_size: '40sp'
                text: ""
                color: 0,1,1
            Label:
                id: feedback
                font_size: '15sp'
                size_hint_y: .6
                text: ""
                halign: "center"
            BoxLayout:
                orentiation: 'horizontal'
                size_hint_y: .15
                Button:
                    id: break
                    size_hint_x: .15
                    font_size: '12sp'
                    halign: 'center'
                    text: "ipdb"
                    on_release: root.debugme()
                Label:
                    id: credits
                    size_hint_x: 0.85
                    halign: 'left'
                    font_size: '14sp'
                    markup: True
                    text: "[color=#6AD566][b]el contador:[/b] kuick@arlut.utexas.edu\n[b]el mulo:[/b] furgason@arlut.utexas.edu\n[b]el geeky friki:[/b] littlej@arlut.utexas.edu[/color]"
        BoxLayout:
            orientation: 'vertical'
            Label:
                id: keypad_place_holder
                layout: "phone.json"
                halign: "center"
