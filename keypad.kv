<KeyPadScreen>:
    userInput: userInput
    feedback: feedback

    BoxLayout:
        orientation: 'horizontal'
        BoxLayout:
            Label:
                id: feedback
                text: "Foo bar"
                halign: "center"
        BoxLayout:
            orientation: 'vertical'
            Label:
                id: userInput
                size_hint_y: 0.1
                markup: True
                text: "userInput"
                halign: "center"
            Label:
                id: keypad_place_holder
                size_hint_y: 0.9
                layout: "phone.json"
                halign: "center"
